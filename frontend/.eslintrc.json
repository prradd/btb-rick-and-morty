{
  "extends": ["next/core-web-vitals", "eslint:recommended"],
  "rules": {
    "object-curly-spacing": [
      "error",
      "always"
    ],
    "indent": [
      "error",
      2
    ],
    "quotes": [
      "error",
      "single"
    ],
    "semi": [
      "error",
      "always"
    ],
    "comma-dangle": [
      "error",
      "always-multiline"
    ],
    "linebreak-style": [
      "error",
      "unix"
    ],
    "no-console": "warn",
    "arrow-parens": [
      "error",
      "as-needed"
    ],
    "no-unused-vars": [
      "warn",
      {
        "argsIgnorePattern": "^_"
      }
    ],
    "prefer-const": "error",
    "no-var": "error",
    "prefer-arrow-callback": "error"
  }
}
